source "https://rubygems.org"

# Core GitHub Pages dependency which includes Jekyll
gem "github-pages", group: :jekyll_plugins

# Additional plugins
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-archives"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-leaflet"
end

# Required for Ruby 3+
gem "webrick"